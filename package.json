{
  "name": "mrashidi.me",
  "version": "0.1.82",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "NEXT_TELEMETRY_DISABLED=1 pnpm generate-sitemap && pnpm generate-og-images && next build",
    "build:fast": "SKIP_PWA=true next build",
    "build:with-sitemap": "NEXT_TELEMETRY_DISABLED=1 pnpm generate-sitemap && next build",
    "start": "next start",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "generate-sitemap": "NODE_NO_WARNINGS=1 tsx scripts/generate-sitemap.ts",
    "generate-og-images": "tsx scripts/generate-og-images.jsx",
    "analyze": "ANALYZE=true next build",
    "release": "npx standard-version",
    "clean": "pnpm store prune && rm -rf node_modules .next",
    "reinstall": "pnpm clean && pnpm install",
    "update": "pnpm update --latest",
    "outdated": "pnpm outdated"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.948.0",
    "@fontsource/albert-sans": "^5.2.8",
    "@fontsource/exo-2": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@fontsource/orbitron": "^5.2.8",
    "@fontsource/press-start-2p": "^5.2.7",
    "@fontsource/vt323": "^5.2.7",
    "@headlessui/react": "^2.2.9",
    "@hookform/resolvers": "^5.2.2",
    "@next/third-parties": "^16.0.8",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-email/components": "^0.5.7",
    "@react-email/render": "^1.4.0",
    "@sentry/nextjs": "^10.29.0",
    "@uidotdev/usehooks": "^2.4.1",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.35.7",
    "@vercel/analytics": "^1.6.1",
    "@vercel/blob": "^2.0.0",
    "@vercel/og": "^0.8.5",
    "@vercel/speed-insights": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "file-type": "^21.1.1",
    "framer-motion": "^12.23.25",
    "html-react-parser": "^5.2.10",
    "html-to-text": "^9.0.5",
    "ky": "^1.14.1",
    "lucide-react": "^0.548.0",
    "nanoid": "^5.1.6",
    "next": "^16.0.8",
    "next-pwa": "^5.6.0",
    "pino": "^10.1.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-email": "^4.3.2",
    "react-hook-form": "^7.68.0",
    "react-icons": "^5.5.0",
    "sanitize-filename": "^1.6.3",
    "sanitize-html": "^2.17.0",
    "swr": "^2.3.7",
    "tailwind-merge": "^3.4.0",
    "validator": "^13.15.23",
    "xml2js": "^0.6.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@next/bundle-analyzer": "^16.0.8",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/next-pwa": "^5.6.9",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/validator": "^13.15.10",
    "@types/xml2js": "^0.4.14",
    "@vitejs/plugin-react": "^5.1.2",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d",
  "engines": {
    "node": "24.x",
    "pnpm": "10.x"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "biome check --write",
      "biome format --write"
    ],
    "scripts/**/*.{js,ts}": [
      "biome check --write",
      "biome format --write"
    ],
    "*.json": [
      "biome format --write"
    ],
    "src/**/*.{css,scss}": [
      "biome check --write"
    ]
  }
}
